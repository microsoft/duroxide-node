{
  "name": "duroxide",
  "version": "0.1.0",
  "description": "Durable execution runtime for Node.js, powered by Rust",
  "main": "lib/duroxide.js",
  "types": "index.d.ts",
  "napi": {
    "name": "duroxide",
    "triples": {
      "defaults": true
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node --test __tests__/e2e.test.js",
    "test:admin": "node --test __tests__/admin_api.test.js",
    "test:scenarios": "node --test __tests__/scenarios/*.test.js",
    "test:all": "node --test __tests__/e2e.test.js __tests__/admin_api.test.js __tests__/scenarios/*.test.js",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "dotenv": "^17.2.4"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/"
  ]
}
